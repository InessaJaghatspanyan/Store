@model IEnumerable<Store.Models.Product>

@{
    ViewBag.Title = "List";
}

<button type="submit" class="btn" style="margin-top:30px">@Html.ActionLink("Generate products", "GenerateProducts")</button>
<h2 style="text-align:center">List</h2>


<button type="submit" class="btn-link">@Html.ActionLink("Create New", "CreateProduct")</button>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Barcode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Barcode)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { productID = item.ProductID })|
            @Html.ActionLink("Delete", "DeleteProduct", new { productID = item.ProductID })
        </td>
    </tr>
}

</table>

